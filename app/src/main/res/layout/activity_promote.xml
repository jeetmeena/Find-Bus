<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PromoteActivity"
    android:id="@+id/ralati"
    android:background="@color/blue"
    android:fitsSystemWindows="true"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <!-- divider - android:paddingBottom="?attr/actionBarSize" -->


    <LinearLayout
        android:id="@+id/layoutBars"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="51dp"
        android:gravity="center"
        android:orientation="horizontal">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:paddingBottom="30dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha=".4"
            android:background="@android:color/white"

            android:layout_alignParentStart="true" />
        <LinearLayout
            android:id="@+id/line1la"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_gravity="center"

                 android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/intro_indicator_0"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:layout_margin="1dp"

                android:background="@color/colorPrimaryDark" />

            <ImageView
                android:id="@+id/intro_indicator_1"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:layout_margin="1dp"
                android:background="@color/orange" />

            <ImageView
                android:id="@+id/intro_indicator_2"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:layout_margin="1dp"
                android:background="@color/orange" />

            <ImageView
                android:id="@+id/intro_indicator_3"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:layout_margin="1dp"
                android:background="@color/orange" />

            <ImageView
                android:id="@+id/intro_indicator_4"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:layout_margin="1dp"
                android:background="@color/orange" />
            <!-- Your other 2 indicators here -->

        </LinearLayout>


        <Button
            android:id="@+id/goto_last"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
             android:layout_marginRight="30dp"
            android:text="Skip"

            >

        </Button>

        <Button
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22dp"
            android:layout_marginRight="30dp"
            android:visibility="gone"
            android:text="finish">

        </Button>

    </RelativeLayout>
</RelativeLayout>